<main class="d-flex justify-content-center">
  <div class="container" style="max-width: 33%; min-width: 300px;">
    <h1 class="mt-4">Editing Book</h1> <!-- 上に余白を追加 -->

    <% if @book.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= "#{@book.errors.count} errors prohibited this object from being saved:" %></h4>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- 既存の画像を表示 -->


    <%= form_with model: @book, local: true do |form| %>
      <div class="form-group">
        <%= form.label :title, "Title" %>
        <%= form.text_field :title, class: "form-control", value: @book.title %>
      </div>
      <div class="form-group">
        <%= form.label :body, "Opinion" %>
        <%= form.text_area :body, class: "form-control", value: @book.body %>
      </div>
      <div class="form-group">
        <%= form.submit "Update Book", class: "btn btn-primary" %>
      </div>
    <% end %>

    <div class="mt-3">
      <%= link_to 'Show', book_path(@book), class: 'text-primary', style: 'text-decoration: none; margin-right: 10px;' %> |
      <%= link_to 'Back', books_path, class: 'text-primary', style: 'text-decoration: none;' %> <!-- 修正部分 -->
    </div>
  </div>
</main>
