<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h4>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= render partial: 'shared/user_info', locals: { user: @user, book: @book } %>
    </div>

    <div class='col-md-8 offset-md-1'>
      <h2 class="mt-4">Books</h2> <!-- 上に余白を追加 -->
      <table class="table">
        <thead>
          <tr>
            <th>Image</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to image_tag(book.user.get_profile_image(100, 100)), user_path(book.user) %>
              </td>
              <td>
                <%= link_to book.title, book_path(book), class: 'book-title' %>
              </td>
              <td>
                <%= truncate(book.body, length: 50) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>