<h2 class="mt-4">User info</h2> <!-- 上に余白を追加 -->
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>Name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>Introduction</th>
      <td><%= user.introduction %></td>
    </tr>
  </tbody>
</table>
<% unless user.guest_user? %>
  <div class="row">
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>
<% end %>
<!-- User infoとNew bookの間にあるプロフィールを更新ボタン -->
<div class="text-center mt-3">
  <%= link_to content_tag(:i, '', class: 'fa-solid fa-user-cog'), edit_user_path(user.id), class: 'btn btn-primary btn-block', title: 'プロフィールを更新' %>
</div>

<h2 class="mt-3">New book</h2>

<%= form_with model: book, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :body, "Opinion" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Book", class: "btn btn-success" %>
  </div>
<% end %>
